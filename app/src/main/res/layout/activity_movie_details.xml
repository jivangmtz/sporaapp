<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.ivan.garcia.sporaapplication.models.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailsActivity">

        <TextView
            android:id="@+id/tvDirectorLbl"
            style="@style/label_style"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/tv_director"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDirector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{movie.title}"
            app:layout_constraintEnd_toEndOf="@+id/tvDirectorLbl"
            app:layout_constraintStart_toStartOf="@+id/tvDirectorLbl"
            app:layout_constraintTop_toBottomOf="@+id/tvDirectorLbl" />

        <TextView
            android:id="@+id/tvCastLbl"
            style="@style/label_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/tv_cast"
            app:layout_constraintEnd_toEndOf="@+id/tvDirector"
            app:layout_constraintStart_toStartOf="@+id/tvDirector"
            app:layout_constraintTop_toBottomOf="@+id/tvDirector" />

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{movie.actors}"
            app:layout_constraintEnd_toEndOf="@+id/tvCastLbl"
            app:layout_constraintStart_toStartOf="@+id/tvCastLbl"
            app:layout_constraintTop_toBottomOf="@+id/tvCastLbl" />

        <TextView
            android:id="@+id/tvSinopsisLbl"
            style="@style/label_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/tv_sinopsis"
            app:layout_constraintEnd_toEndOf="@+id/tvCast"
            app:layout_constraintStart_toStartOf="@+id/tvCast"
            app:layout_constraintTop_toBottomOf="@+id/tvCast" />

        <TextView
            android:id="@+id/tvSinopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{movie.plot}"
            app:layout_constraintEnd_toEndOf="@+id/tvSinopsisLbl"
            app:layout_constraintStart_toStartOf="@+id/tvSinopsisLbl"
            app:layout_constraintTop_toBottomOf="@+id/tvSinopsisLbl" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
